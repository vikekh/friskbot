{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "azureComputerVisionApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Vision key"
      }
    },
    "azureLuisApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Luis Key"
      }
    },
    "discordBotToken": {
      "type": "securestring",
      "metadata": {
        "description": "Båt token"
      }
    },
    "friskBotImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Tag for Frisk Båt to deploy"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "westeurope",
      "metadata": {
        "description": "Location of container group"
      }
    }
  },
  "variables": {
    "containerGroupName": "friskbotContainerGroup",
    "friskBotName": "friskbot-cli",
    "friskBotImageName": "vikekh/friskbot-cli"
  },
  "resources": [
    {
      "name": "[variables('containerGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "location": "[parameters('location')]",
      "properties": {
        "containers": [
          {
            "name": "[variables('friskBotName')]",
            "properties": {
              "image": "[variables('friskBotImageName')]:[parameters('friskBotImageTag')]",
              "environmentVariables": [
                {
                  "name": "AZURE_COMPUTER_VISION_API_KEY",
                  "value": "[parameters('azureComputerVisionApiKey')]"
                },
                {
                  "name": "AZURE_LUIS_API_KEY",
                  "value": "[parameters('azureLuisApiKey')]"
                },
                {
                  "name": "DISCORD_BOT_TOKEN",
                  "value": "[parameters('discordBotToken')]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "1",
                  "memoryInGb": "1.5"
                }
              }
            }
          }
        ],
        "restartPolicy": "OnFailure",
        "osType": "Linux"
      }
    }
  ]
}
